<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.league.shop.dao.LocaleDao">

	<select id="get" resultType="com.league.shop.domain.LocaleDO">
		select `id`,`name` from shop_locale where id = #{value}
	</select>

	<select id="list" resultType="com.league.shop.domain.LocaleDO">
		select `id`,`name` from shop_locale
        <where>  
		  		  <if test="id != null and id != ''"> and id = #{id} </if>
		  		  <if test="name != null and name != ''"> and name = #{name} </if>
		  		</where>
        <choose>
            <when test="sort != null and sort.trim() != ''">
                order by ${sort} ${order}
            </when>
			<otherwise>
                order by id desc
			</otherwise>
        </choose>
		<if test="offset != null and limit != null">
			limit #{offset}, #{limit}
		</if>
	</select>
	
 	<select id="count" resultType="int">
		select count(*) from shop_locale
		 <where>  
		  		  <if test="id != null and id != ''"> and id = #{id} </if>
		  		  <if test="name != null and name != ''"> and name = #{name} </if>
		  		</where>
	</select>
	 
	<insert id="save" parameterType="com.league.shop.domain.LocaleDO">
		insert into shop_locale
		(
			`id`, 
			`name`
		)
		values
		(
			#{id}, 
			#{name}
		)
	</insert>
	 
	<update id="update" parameterType="com.league.shop.domain.LocaleDO">
		update shop_locale 
		<set>
			<if test="name != null">`name` = #{name}</if>
		</set>
		where id = #{id}
	</update>
	
	<delete id="remove">
		delete from shop_locale where id = #{value}
	</delete>
	
	<delete id="batchRemove">
		delete from shop_locale where id in 
		<foreach item="id" collection="array" open="(" separator="," close=")">
			#{id}
		</foreach>
	</delete>

</mapper>